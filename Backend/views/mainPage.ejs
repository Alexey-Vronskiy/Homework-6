<% include common/header.ejs %>

<div class="cart">
    <div class="orders-info">
        <div class="orders">
            <div style="padding-right: 10px">Order</div>
            <div class="quantity"> 0 </div>
        </div>
        <button class="clear"> Clear the order </button>
    </div>

    <div class="container-for-orders">
        <div class="raw-of-offer">
            <div class="left-info">
                <div class="name"> BBQ(велика) </div>
                <div class="raw-info">
                    <div class="size" style="padding-right: 10px">
                        <img style="float:centre" src="assets/images/size-icon.svg">
                        <div style="margin-left: 5px"> 40 </div>
                    </div>

                    <div class="weight">
                        <img style="float:centre" src="assets/images/weight.svg">
                        <div style="margin-left: 5px"> 370 </div>
                    </div>
                </div>
                <div class="info-buttons">
                    <div style="font-weight:700">556грн</div>
                    <div class="main-buttons" style="padding-left: 20px">
                        <button type="button" class="minus" style="background-image: url(assets/images/iconfinder_minus_1645995.svg)">

                        </button>
                        <div class="quantity-in"> 1 </div>
                        <button type="button" class="plus" style="background-image: url(assets/images/iconfinder_plus_1646001.svg)"> </button>
                        <button type="button" class="remove"> X </button>
                    </div>
                </div>
            </div>
            <div class="right-photo">
                <img src="assets/images/pizza_1.jpg" class="small-photo">
            </div>

        </div>
        
    </div>
    <div class="your-order">
        <div class="order-sum">
            <div class="total"> In total: </div>
            <div class="sum"> 0 </div>
            <div id="currency"> грн </div>
        </div>
        <button type="button" class="warning" id="check"> Check in </button>
    </div>
</div>



<div class="container">

    <div class="all-pizzas">
        <div class="in-stack">
            <div class="title">
                <div class="all"> Усі піци </div>
                <div class="number-in-stack"> 8 </div>
            </div>
        </div>
        <div class="types" id="menu">
            <button type="button" class="warning" id="all" style="width: 30px; margin-top: 0px">Усі</button>
            <button type="button" class="btn btn-link" id="meat"> М'ясні </button>
            <button type="button" class="btn btn-link" id="pineapple"> З ананасами </button>
            <button type="button" class="btn btn-link" id="tomato"> З томатами </button>
            <button type="button" class="btn btn-link" id="seafood"> З морепродуктами </button>
            <button type="button" class="btn btn-link" id="vega"> Вега </button>
        </div>
    </div>

    <div class="row" id="pizza_list">     </div>

